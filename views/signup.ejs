<html>
    <head>
        <title>Login Here</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="./static/css/style.css">
    </head>
    <body class="container">
        <div class="page-header">
            <nav class="navbar navbar navbar-expand-lg ">
                <div class="container-fluid">
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="/login">Login</a></li>
                        </ul>
    
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/login">Log In</a></li>
                            <li><a href="/logout">Log Out</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
    
        </div>
            <section class="ftco-section">

                <div class="container">
                    
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center mb-5">
                            <h2 class="heading-section">Sign Up</h2>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-6 col-lg-5">
                            <div class="login-wrap p-4 p-md-5">
                          <div class="icon d-flex align-items-center justify-content-center">
                              <span class="fa fa-user-o"></span>
                          </div>
                          <h3 class="text-center mb-4">Don't Have an account?</h3>
                                <form class="login-form" action="/signup" method="post">
                              <div class="form-group">
                                  <input type="text" class="form-control rounded-left" placeholder="Username" required type="text" name="username"/>
                              </div>
                             <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Email" required type="email" name="email">
                            </div>
                        <div class="form-group d-flex">
                          <input type="password" class="form-control rounded-left" placeholder="Password" name="password"/>
                        </div>
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Sign Up</button>
                        </div>
                      </form>
                    </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  
</html>